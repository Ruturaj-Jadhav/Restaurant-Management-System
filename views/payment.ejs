    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
</head>

<body>
    
            <center><button class="btn one3" onclick="handlePayment(500)">Pay Now</button></center>


      
    <script>
        
        function handlePayment(amount) {
            const param = new URLSearchParams({
                amount : amount,

            });
            axios({
                method: 'post',
                url: '/payment/orders',
                data: param.toString()
            })

        }

      
    </script>
</body>

</html>